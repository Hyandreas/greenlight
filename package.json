{
  "name": "@hyandreas/greenlight",
  "version": "1.0.0",
  "description": "VS Code extension and GitHub Action for detecting non-Baseline web features",
  "main": "dist/extension/extension.js",
  "bin": {
    "greenlight": "dist/cli/index.js"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run build:cli && npm run build:extension && npm run build:action",
    "build:cli": "npm run clean && tsc -p tsconfig.cli.json",
    "build:extension": "tsc -p tsconfig.extension.json && npm run bundle:extension",
    "build:action": "tsc -p tsconfig.action.json && npm run bundle:action",
    "bundle:extension": "esbuild src/extension/extension.ts --bundle --outfile=dist/extension/extension.js --external:vscode --format=cjs --platform=node",
    "bundle:action": "esbuild src/action/index.ts --bundle --outfile=dist/action/index.js --format=cjs --platform=node",
    "dev": "npm run build:cli && node dist/cli/index.js --help",
    "test": "vitest",
    "package:extension": "vsce package --out dist/greenlight.vsix",
    "lint": "eslint src/**/*.ts",
    "prepare": "echo 'Ready for development'"
  },
  "keywords": [
    "vscode",
    "extension",
    "web",
    "compatibility",
    "baseline",
    "github-action"
  ],
  "author": "Greenlight Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "vscode": "^1.70.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.3.0",
    "@vscode/vsce": "^2.20.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^6.0.0",
    "@babel/parser": "^7.23.0",
    "@babel/traverse": "^7.23.0",
    "@babel/types": "^7.23.0",
    "@octokit/rest": "^20.0.0",
    "@types/babel__traverse": "^7.28.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "browserslist": "^4.22.0",
    "commander": "^11.0.0",
    "glob": "^10.0.0",
    "minimatch": "^10.0.3",
    "postcss": "^8.4.0",
    "postcss-selector-parser": "^6.0.0"
  },
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:less",
    "onCommand:baselineBuddy.checkFile",
    "onCommand:baselineBuddy.checkWorkspace",
    "onCommand:baselineBuddy.clearDiagnostics"
  ],
  "contributes": {
    "configuration": {
      "title": "Greenlight",
      "properties": {
        "baselineBuddy.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Greenlight diagnostics"
        },
        "baselineBuddy.severity": {
          "type": "string",
          "enum": [
            "error",
            "warning",
            "info"
          ],
          "default": "warning",
          "description": "Default severity level for baseline compatibility issues"
        }
      }
    },
    "commands": [
      {
        "command": "baselineBuddy.checkFile",
        "title": "Check Current File",
        "category": "Greenlight"
      },
      {
        "command": "baselineBuddy.checkWorkspace",
        "title": "Check All Files",
        "category": "Greenlight"
      },
      {
        "command": "baselineBuddy.clearDiagnostics",
        "title": "Clear Diagnostics",
        "category": "Greenlight"
      }
    ]
  }
}
