{
  "name": "greenlight-web-compat",
  "displayName": "Greenlight Baseline",
  "description": "Real-time detection of non-Baseline web features with compatibility warnings",
  "version": "1.0.0",
  "publisher": "AndreasTsang",
  "main": "./dist/extension/extension.js",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "keywords": [
    "web",
    "compatibility",
    "baseline",
    "javascript",
    "typescript",
    "css",
    "browser-support"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript", 
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:less"
  ],
  "contributes": {
    "configuration": {
      "title": "Greenlight",
      "properties": {
        "greenlight.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable Greenlight diagnostics"
        },
        "greenlight.severity": {
          "type": "string",
          "enum": ["error", "warning", "info"],
          "default": "warning",
          "description": "Default severity level for baseline compatibility issues"
        },
        "greenlight.baselineTarget": {
          "type": "string",
          "enum": ["2024", "2025", "custom"],
          "default": "2024",
          "description": "Baseline target year or custom browserslist"
        }
      }
    },
    "commands": [
      {
        "command": "greenlight.checkFile",
        "title": "Check Current File",
        "category": "Greenlight"
      },
      {
        "command": "greenlight.checkWorkspace", 
        "title": "Check All Files",
        "category": "Greenlight"
      },
      {
        "command": "greenlight.clearDiagnostics",
        "title": "Clear Diagnostics", 
        "category": "Greenlight"
      }
    ]
  },
  "scripts": {
    "build": "tsc -p tsconfig.extension.json && esbuild src/extension/extension.ts --bundle --outfile=dist/extension/extension.js --external:vscode --format=cjs --platform=node",
    "package": "vsce package",
    "publish": "vsce publish",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist/extension/",
    "dist/core/",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.70.0", 
    "@vscode/vsce": "^2.20.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@babel/parser": "^7.23.0",
    "@babel/traverse": "^7.23.0",
    "@babel/types": "^7.23.0",
    "@types/babel__traverse": "^7.28.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "browserslist": "^4.22.0",
    "glob": "^10.0.0",
    "minimatch": "^10.0.3",
    "postcss": "^8.4.0",
    "postcss-selector-parser": "^6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/greenlight.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/greenlight/issues"  
  },
  "homepage": "https://github.com/yourusername/greenlight#readme"
}