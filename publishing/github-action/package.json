    "@babel/types": "^7.23.0",
    "@octokit/rest": "^20.0.0",
    "@types/babel__traverse": "^7.28.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "browserslist": "^4.22.0",
    "glob": "^10.0.0",
    "minimatch": "^10.0.3",
    "postcss": "^8.4.0",
    "postcss-selector-parser": "^6.0.0"
  },
  "devDependencies": {
