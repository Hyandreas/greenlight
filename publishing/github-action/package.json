{
  "name": "greenlight-action",
  "version": "1.0.0", 
  "description": "GitHub Action for detecting non-Baseline web features in pull requests",
  "main": "dist/action/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.action.json && esbuild src/action/index.ts --bundle --outfile=dist/action/index.js --format=cjs --platform=node",
